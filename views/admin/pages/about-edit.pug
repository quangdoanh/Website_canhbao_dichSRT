extends ../layouts/default.pug

block main
    h1.box-title Sửa bài giới thiệu
  
    .section-8
      form#about-edit-form
        .inner-group.inner-two-col(style="display:none;")
          label(class="inner-label" for="id" ) Id
          input(type="text" id="id" name="id" value= aboutDetail.id)
        .inner-group.inner-two-col
          label(class="inner-label" for="title") Tiêu đề
          input(type="text" id="title" name="title" value= aboutDetail.title)
        .inner-group.inner-two-col
          label(class="inner-label" for="avatar") Ảnh đại diện
          div(class="inner-upload-image")
            input(type="file" id="avatar" accept="image/*" filepond-image name="avatar" image-default=(aboutDetail.avatar || ""))
        .inner-group.inner-two-col
          label(class="inner-label" for="content") Nội dung chính
          textarea(id="content" textarea-mce name="content") #{aboutDetail.content}
        .inner-button.inner-two-col
          button Cập nhật
      .inner-back
        a(href=`/${pathAdmin}/about/list`) Quay lại danh sách