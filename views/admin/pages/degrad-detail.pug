extends ../layouts/default.pug

block main
  h1.box-title Chi tiết bản ghi
  .section-8
    form#degrad-view-form
      //- ID bản ghi (ẩn)
      .inner-group(style="display:none")
        label(class="inner-label" for="id") ID
        input(type="text" id="id" name="id" value=(dataDetail.id || "Không xác định") readonly)

      //- Tỉnh
      .inner-group
        label(class="inner-label" for="ten_tinh") Tỉnh
        input(type="text" id="ten_tinh" name="ten_tinh" value=(dataDetail.ten_tinh || "Không xác định") readonly)

      //- Huyện
      .inner-group
        label(class="inner-label" for="ten_huyen") Huyện
        input(type="text" id="ten_huyen" name="ten_huyen" value=(dataDetail.ten_huyen || "Không xác định") readonly)

      //- Xã
      .inner-group
        label(class="inner-label" for="ten_xa") Xã
        input(type="text" id="ten_xa" name="ten_xa" value=(dataDetail.ten_xa || "Không xác định") readonly)

      //- Tiểu khu
      .inner-group
        label(class="inner-label" for="tk") Tiểu khu
        input(type="text" id="tk" name="tk" value=(dataDetail.tk || "Không xác định") readonly)

      //- Khoảnh
      .inner-group
        label(class="inner-label" for="khoanh") Khoảnh
        input(type="text" id="khoanh" name="khoanh" value=(dataDetail.khoanh || "Không xác định") readonly)

      //- Lô
      .inner-group
        label(class="inner-label" for="lo") Lô
        input(type="text" id="lo" name="lo" value=(dataDetail.lo || "Không xác định") readonly)

      //- Diện tích hồ sơ (ha)
      .inner-group
        label(class="inner-label" for="dtich") Diện tích hồ sơ (ha)
        input(type="text" id="dtich" name="dtich" value=(dataDetail.dtich || "Không xác định") readonly)

      //- Loại đất / loại rừng
      .inner-group
        label(class="inner-label" for="ldlr") Loại đất / Loại rừng
        input(type="text" id="ldlr" name="ldlr" value=(dataDetail.ldlr || "Không xác định") readonly)

      //- Chủ rừng
      .inner-group
        label(class="inner-label" for="chu_rung") Chủ rừng
        input(type="text" id="chu_rung" name="chu_rung" value=(dataDetail.chu_rung || "Không xác định") readonly)

      //- Diện tích đo (ha)
      .inner-group
        label(class="inner-label" for="area_ha") Diện tích đo (ha)
        input(type="text" id="area_ha" name="area_ha" value=(dataDetail.area_ha || "Không xác định") readonly)

      //- Diện tích suy thoái (ha)
      .inner-group
        label(class="inner-label" for="degrad_ha") Diện tích suy thoái (ha)
        input(type="text" id="degrad_ha" name="degrad_ha" value=(dataDetail.degrad_ha || "Không xác định") readonly)

      //- Diện tích chưa rõ nguyên nhân
      .inner-group
        label(class="inner-label" for="nochang_ha") Diện tích chưa rõ nguyên nhân
        input(type="text" id="nochang_ha" name="nochang_ha" value=(dataDetail.nochang_ha != null ? dataDetail.nochang_ha : "Không xác định") readonly)

      //- Diện tích cải thiện
      .inner-group
        label(class="inner-label" for="improv_ha") Diện tích cải thiện
        input(type="text" id="improv_ha" name="improv_ha" value=(dataDetail.improv_ha != null ? dataDetail.improv_ha : "Không xác định") readonly)

      //- Diện tích trồng rừng
      .inner-group
        label(class="inner-label" for="refor_ha") Diện tích trồng rừng
        input(type="text" id="refor_ha" name="refor_ha" value=(dataDetail.refor_ha != null ? dataDetail.refor_ha : "Không xác định") readonly)

      //- Vệ tinh
      .inner-group
        label(class="inner-label" for="sensor") Vệ tinh (sensor)
        input(type="text" id="sensor" name="sensor" value=(dataDetail.sensor || "Không xác định") readonly)

      //- Ngày thu nhận ảnh
      .inner-group
        label(class="inner-label" for="acqui_dateFormat") Ngày thu nhận ảnh
        input(type="text" id="acqui_dateFormat" name="acqui_dateFormat" value=(dataDetail.acqui_dateFormat || "Không xác định") readonly)

      //- Trạng thái
      .inner-group
        label(class="inner-label" for="status") Trạng thái
        input( type="text" id="status" name="status" value=(dataDetail.status === 0? "Chưa xác nhận": dataDetail.status === 1? "Đã xác nhận": "Không xác định"))

    //- Back button
    .inner-back
        a(
            href=(dataDetail.status === 0 
            ? "/admin/degrad/list/pending" 
            : dataDetail.status === 1 
            ? "/admin/degrad/list/confirmed" 
            : "/admin/degrad/list")
        ) Quay lại danh sách
