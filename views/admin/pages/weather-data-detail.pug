extends ../layouts/default.pug

block main
  h1.box-title Chi tiết bản ghi
  .section-8
    form#weather-view-form
      //- ID ẩn
      .inner-group(style="display:none")
        label(class="inner-label" for="id") ID
        input(type="text" id="id" name="id" value=(dataDetail.id || "Không xác định") readonly)

      //- Tỉnh
      .inner-group
        label(class="inner-label" for="ten_tinh") Tỉnh
        input(type="text" id="ten_tinh" name="ten_tinh" value=(dataDetail.ten_tinh || "Không xác định") readonly)

      //- Huyện
      .inner-group
        label(class="inner-label" for="ten_huyen") Huyện
        input(type="text" id="ten_huyen" name="ten_huyen" value=(dataDetail.ten_huyen || "Không xác định") readonly)

      //- Xã
      .inner-group
        label(class="inner-label" for="ten_xa") Xã
        input(type="text" id="ten_xa" name="ten_xa" value=(dataDetail.ten_xa || "Không xác định") readonly)

      //- Nhiệt độ Min
      .inner-group
        label(class="inner-label" for="temp_min") Nhiệt độ Min (°C)
        input(type="text" id="temp_min" name="temp_min" value=(dataDetail.temp_min || "Không xác định") readonly)

      //- Nhiệt độ Max
      .inner-group
        label(class="inner-label" for="temp_max") Nhiệt độ Max (°C)
        input(type="text" id="temp_max" name="temp_max" value=(dataDetail.temp_max || "Không xác định") readonly)

      //- Nhiệt độ TB
      .inner-group
        label(class="inner-label" for="temp_mean") Nhiệt độ TB (°C)
        input(type="text" id="temp_mean" name="temp_mean" value=(dataDetail.temp_mean || "Không xác định") readonly)

      //- Lượng mưa Min
      .inner-group
        label(class="inner-label" for="rain_min") Lượng mưa Min (mm)
        input(type="text" id="rain_min" name="rain_min" value=(dataDetail.rain_min || "Không xác định") readonly)

      //- Lượng mưa Max
      .inner-group
        label(class="inner-label" for="rain_max") Lượng mưa Max (mm)
        input(type="text" id="rain_max" name="rain_max" value=(dataDetail.rain_max || "Không xác định") readonly)

      //- Lượng mưa TB
      .inner-group
        label(class="inner-label" for="rain_mean") Lượng mưa TB (mm)
        input(type="text" id="rain_mean" name="rain_mean" value=(dataDetail.rain_mean || "Không xác định") readonly)

      //- Tốc độ gió Min
      .inner-group
        label(class="inner-label" for="wind_min") Tốc độ gió Min (m/s)
        input(type="text" id="wind_min" name="wind_min" value=(dataDetail.wind_min || "Không xác định") readonly)

      //- Tốc độ gió Max
      .inner-group
        label(class="inner-label" for="wind_max") Tốc độ gió Max (m/s)
        input(type="text" id="wind_max" name="wind_max" value=(dataDetail.wind_max || "Không xác định") readonly)

      //- Tốc độ gió TB
      .inner-group
        label(class="inner-label" for="wind_mean") Tốc độ gió TB (m/s)
        input(type="text" id="wind_mean" name="wind_mean" value=(dataDetail.wind_mean || "Không xác định") readonly)

      //- Cấp số
      .inner-group
        label(class="inner-label" for="cap_so_p") Cấp số
        input(type="text" id="cap_so_p" name="cap_so_p" value=(dataDetail.cap_so_p != null ? dataDetail.cap_so_p : "Không xác định") readonly)

      //- Ngày cập nhật
      .inner-group
        label(class="inner-label" for="ngay_cap_nhat") Ngày cập nhật
        input(type="text" id="ngay_cap_nhat" name="ngay_cap_nhat" value=(dataDetail.ngay_cap_nhatFomat || "Không xác định") readonly)

    //- Back button
    .inner-back
      a(href="/admin/weather-data/list") Quay lại danh sách
