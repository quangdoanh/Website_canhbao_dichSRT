extends ../layouts/default

block main
  h1.box-title Danh sách liên hệ

  //- Section 4: Bộ lọc
  .section-4
    .inner-wrap
      .inner-item.inner-label
        <i class="fa-solid fa-filter"></i> Bộ lọc
      .inner-item
        select
          option(value="") Trạng thái
          option(value="0") Chưa xử lý
          option(value="1") Đã trả lời
          option(value="2") Đang xử lý
      .inner-item.inner-date
        input(type="date")
        span - 
        input(type="date")
      .inner-item.inner-reset
        <i class="fa-solid fa-rotate-left"></i> Xóa bộ lọc

  //- Section 5: Hành động & tìm kiếm
  .section-5
    .inner-wrap
      .inner-change-status
        .inner-item
          select
            option(value="") -- Hành động --
            option(value="1") Đã trả lời
            option(value="2") Đang xử lý
            option(value="delete") Xóa
        .inner-item
          button Áp dụng
      .inner-search
        i(class="fa-solid fa-magnifying-glass")
        input(type="text" placeholder="Tìm kiếm")


  //- Section 6: Bảng danh sách
  .section-6
    .table-2
      table
        thead
          tr
            th.inner-center
              input(type="checkbox" class="inner-check")
            th Họ tên
            th Email
            th Số điện thoại
            th Trạng thái
            th Ngày tạo
            th Hành động
        tbody
          each contact in contactList
            tr
              td.inner-center
                input(type="checkbox" class="inner-check")
              td= contact.full_name
              td= contact.email
              td= contact.phone || "-"
              td 
                if contact.status == 1
                  .badge.badge-green Đã trả lời
                else if contact.status == 2
                  .badge.badge-blue Đang xử lý
                else
                  .badge.badge-red Chưa xử lý
              td= contact.createdAtFormat
              td
                .inner-buttons
                  a.inner-edit(href=`/${pathAdmin}/contact/answer/${contact.id}`)
                    i(class="fa-regular fa-pen-to-square")

  //- Section 7: Pagination
  .section-7
    span.inner-label Hiển thị 1 - 3 của 3
    select.inner-pagination(name="page")
      option(value="1" selected) Trang 1
