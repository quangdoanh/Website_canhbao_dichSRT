extends ../layouts/default.pug
block main
    h1.box-title Nhóm quyền

    //- Section 5
    .section-5
      .inner-wrap
        .inner-change-status(
          change-multi 
          data-api =`/${pathAdmin}/role/change-multi`
        )
          .inner-item
            select
              option(value="") -- Hành động --
              option(value="delete") Xóa
          .inner-item
            button Áp dụng
        .inner-search
          <i class="fa-solid fa-magnifying-glass"></i>
          input(type="text" placeholder="Tìm kiếm" search)
          .inner-button-create
            a(href=`/${pathAdmin}/role/create`) + Tạo mới
    //- End Section 5

    //- Section 6
    .section-6
      .table-2
        table
          thead
            tr
              th(class="inner-center")
                input(type="checkbox" class="inner-check" check-all)
              th Tên nhóm quyền
              th Mô tả ngắn
                th Hành động
          tbody
            each item in roleList
              tr
                td(class="inner-center")
                  input(type="checkbox" class="inner-check" check-item = item.id)
                td #{item.name}
                td #{item.description}
                td
                    .inner-buttons
                      a(
                        href=`/${pathAdmin}/role/edit/${item.id}`
                        class="inner-edit"
                      ) <i class="fa-regular fa-pen-to-square"></i>
                      button(
                        class="inner-delete"
                        button-delete
                        data-api=`/${pathAdmin}/role/delete/${item.id}`
                      ) <i class="fa-regular fa-trash-can"></i>

    //- End Section 6
    //- Section 7: Pagination
    .section-7
      - const start = (pagination.page - 1) * limit + 1;
      - const end = Math.min(pagination.page * limit, pagination.totalRecords);
      span.inner-label Hiển thị #{start} - #{end} của #{pagination.totalRecords}

      select.inner-pagination(pagination name="page")
        each val in [...Array(pagination.totalPages).keys()]
          - const pageNum = val + 1;
          option(value=pageNum selected=(pageNum === pagination.page)) Trang #{pageNum}